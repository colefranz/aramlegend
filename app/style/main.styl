primary-color = #3C6389
secondary-color = #89583c

body
  background: secondary-color
  color: #EFEDEF
  text-align: center
  font-family: 'Josefin Sans', sans-serif
  padding: 0
  margin: 0

  *
    box-sizing: border-box

  #main
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    max-width: 1200px
    margin: 0 auto
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    #game
      width: 100%

      .team
        display: flex
        justify-content: center

        &.blue-team
          .tab
            border-radius: 5px 5px 0px 0px

        &.red-team
          .tab
            border-radius: 0px 0px 5px 5px

        .tab
          width: 15%
          padding: 10px 5px
          transition: background 0.25s ease;
          cursor: pointer

          &.active
            background: primary-color
            color: white

          img
            width: 48px
            height: 48px
            border-radius: 24px

          p
            margin: 5px
            font-size: 18px;

      #build
        position: relative
        border 1px solid primary-color
        height: 600px

        .background
          position: absolute
          top: 0
          left: 0
          width:100%
          height: 100%
          opacity: 0.7
          filter: blur(3px)

        .foreground
          position: relative
          z-index: 2
          display: flex
          align-items: center
          justify-content: center
          width: 100%
          height: 100%

          .item
            border-radius: 12px
